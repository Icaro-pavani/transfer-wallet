{
  "name": "transfer-wallet-backend",
  "version": "1.0.0",
  "type": "module",
  "description": "",
  "main": "index.js",
  "scripts": {
    "test": "NODE_OPTIONS=--experimental-vm-modules dotenv -e .env.test jest -- --coverage -i",
    "test:migration:run": "dotenv -e .env.test npm run prisma:deploy",
    "test:unit": "NODE_OPTIONS=--experimental-vm-modules dotenv -e .env.test jest -- -i --coverage --testPathPattern=tests/unit",
    "test:int": "NODE_OPTIONS=--experimental-vm-modules dotenv -e .env.test jest -- -i --coverage --testPathPattern=tests/integration",
    "prisma:migrate": "prisma migrate dev",
    "prisma:deploy": "prisma migrate deploy && prisma generate",
    "dev": "nodemon src/server.ts",
    "build": "tsc",
    "start": "npm run prisma:deploy && node dist/server.js",
    "test:docker:build": "docker-compose -f docker-compose.test.yml build",
    "test:docker:run-test": "docker-compose -f docker-compose.test.yml run transfer-wallet-test bash -c 'npm run test:migration:run && npm run test'"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@prisma/client": "^4.6.1",
    "bcrypt": "^5.1.0",
    "cors": "^2.8.5",
    "dotenv": "^16.0.3",
    "express": "^4.18.2",
    "express-async-errors": "^3.1.1",
    "joi": "^17.7.0",
    "jsonwebtoken": "^8.5.1"
  },
  "devDependencies": {
    "@faker-js/faker": "^7.6.0",
    "@types/bcrypt": "^5.0.0",
    "@types/cors": "^2.8.12",
    "@types/express": "^4.17.14",
    "@types/jest": "^29.2.3",
    "@types/joi": "^17.2.3",
    "@types/jsonwebtoken": "^8.5.9",
    "@types/node": "^18.11.9",
    "@types/supertest": "^2.0.12",
    "dotenv-cli": "^6.0.0",
    "jest": "^29.3.1",
    "nodemon": "^2.0.20",
    "prisma": "^4.6.1",
    "supertest": "^6.3.1",
    "ts-jest": "^29.0.3",
    "ts-node": "^10.9.1",
    "typescript": "^4.9.3"
  }
}
